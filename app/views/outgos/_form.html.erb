<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@outgo) do |f| %>
      <%= f.label :amount, "金額" %>
      <%= f.text_field :amount %>
      <%= f.label :categories, "カテゴリー"%>
      <%= f.select :categories, ["食費", "交通費", "日用品", "趣味", "その他"], :prompt => "選択してください" %>
      <%= f.label :memo, "メモ" %>
      <%= f.text_field :memo %>
      <%= f.label :date, "日付" %>
      <%= raw sprintf(f.date_select(:date, use_month_numbers: true, date_separator: '%s'), "年", "月") + "日" %>
      <%= f.submit "登録" %>
    <% end %>
  </div>
</div>