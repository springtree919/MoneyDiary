<div class="savings">
  <h1 class>今年の詳細</h1>
  <div class="total">
    <h3>貯金額の推移</h3>
    <%= line_chart @line, colors: ["#FF44FF"] %>
  </div>
  <div class="row">
    <div class="column col-md-6">
      <h3 class="chart-title">月別収入詳細</h3>
      <p><%= column_chart @incomes, id: "users-chart", width: "350px", height: "250px", colors: ["#46EEFF"] %></p>
    </div>
    <div class="column col-md-6">
      <h3 class="chart-title">月別支出詳細</h3>
      <p><%= column_chart @outgos, id: "chart", width: "350px", height: "250px", colors: ["#FF8856"] %></p>
    </div>
  </div>
</div>
